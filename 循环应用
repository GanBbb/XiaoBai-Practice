//for循环求阶乘
#include<stdio.h>

int main()
{
	int n = 0;
	scanf("%d", &n);
	int i = 0;
	int num = 1;
	int sum = 0;;
	for (i = 1; i <= n; i++)
	{
		num = num * i;
		sum = sum + num;
	}
	printf("%d\n", sum);

	return 0;

}

//打印字符金字塔
#include<stdio.h>

int main()
{
    char num = 0;
    scanf("%c", &num);
    for (int i = 0; i < 5; i++)
    {
        for (int j = 4; j > i; j--)
        {
            printf(" ");
        }
        for (int n = 0; n <= i; n++)
        {
            printf("%c ", num);
        }
        printf("\n");
    }

    return 0;
}

